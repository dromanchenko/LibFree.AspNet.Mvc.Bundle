<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard1.5</TargetFramework>
    <Version>1.1.0</Version>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <Authors>Dmitry Romanchenko</Authors>
    <Company />
    <Product />
    <Description>A library to bundle (minify/concat) css and js for Asp.Net Core</Description>
    <PackageProjectUrl>https://github.com/dromanchenko/XBundler</PackageProjectUrl>
    <PackageLicenseUrl>https://github.com/dromanchenko/XBundler/blob/master/LICENS</PackageLicenseUrl>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.AspNetCore.Hosting.Abstractions" Version="1.0.0" />
    <PackageReference Include="Microsoft.AspNetCore.Razor.Runtime" Version="1.0.0" />
    <PackageReference Include="NUglify" Version="1.5.8" />
  </ItemGroup>

</Project>
